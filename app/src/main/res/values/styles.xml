<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Base application theme (you can already have this part) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom style for NumberPicker -->
    <style name="PickerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="WheelPickerStyle">
        <item name="android:textColorPrimary">#000000</item> <!-- fallback -->
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>