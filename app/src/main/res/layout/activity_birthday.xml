<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvQuestionBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your birthday?"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <NumberPicker
        android:id="@+id/npMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionBirthday"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/npDay"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <NumberPicker
        android:id="@+id/npDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionBirthday"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintStart_toEndOf="@id/npMonth"
        app:layout_constraintEnd_toStartOf="@id/npYear"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <NumberPicker
        android:id="@+id/npYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionBirthday"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintStart_toEndOf="@id/npDay"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinueBirthday"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_color"
        app:layout_constraintTop_toBottomOf="@id/npMonth"
        app:layout_constraintTop_margin="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
