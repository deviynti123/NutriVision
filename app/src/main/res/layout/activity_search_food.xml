<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSearchFood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".SearchFoodActivity">

    <!-- Back & Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Search Food"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Search Field -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:drawableStart="@drawable/ic_search"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:layout_marginTop="16dp"/>

    <!-- Add Create Food Button -->
    <Button
        android:id="@+id/btnAddCreateFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+  Add Create Food"
        android:backgroundTint="#F1F1F1"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:padding="12dp"/>

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/tabsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/tabRecent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recent"
            android:backgroundTint="#E1DFFF"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/tabFavorites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Favorites"
            android:backgroundTint="#F5F5F5"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/tabPersonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personal"
            android:backgroundTint="#F5F5F5"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- List of Foods -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFoodList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"/>

</LinearLayout>
