<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FE"
    android:padding="16dp">

    <!-- Portion Text -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Food Details"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <TextView
        android:id="@+id/tvFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Nasi Goreng"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvPortion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portion"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvFoodName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Portion Controls -->
    <LinearLayout
        android:id="@+id/portionControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPortion"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_border"
            android:text="âˆ’" />

    </LinearLayout>

    <!-- Calorie Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCalorie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/portionControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nutrientsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardCalorie">


        <!-- Protein -->
        <include
            android:id="@+id/itemProtein"
            layout="@layout/item_nutrient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/itemCarbs"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Carbs -->
        <include
            android:id="@+id/itemCarbs"
            layout="@layout/item_nutrient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/itemFat"
            app:layout_constraintStart_toEndOf="@id/itemProtein"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Fat -->
        <include
            android:id="@+id/itemFat"
            layout="@layout/item_nutrient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemCarbs"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Calorie Card -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/button_color"
        android:text="Update"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutrientsLayout" />

    <TextView
        android:id="@+id/tvPortionCount"
        android:layout_width="32dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="152dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardCalorie"
        android:layout_width="357dp"
        android:layout_height="136dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="273dp">

        <ImageView
            android:id="@+id/iconFire"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="Fire Icon"
            android:src="@drawable/ic_fire"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCalorieLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="Calorie"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iconFire"
            app:layout_constraintTop_toTopOf="@id/iconFire" />

        <ImageView
            android:id="@+id/editCalorie"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="Edit Icon"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iconFire" />

        <TextView
            android:id="@+id/tvCalorieValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="267"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconFire" />

        <TextView
            android:id="@+id/tvKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kcal"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvCalorieValue"
            app:layout_constraintTop_toBottomOf="@id/tvCalorieValue" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
