<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Search Box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="Search for Recipes"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:background="@drawable/rounded_search_box"
            android:paddingHorizontal="16dp"
            android:textColorHint="#888888"
            android:inputType="text" />

        <!-- Recipe 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white_box"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/rounded_image"
                android:scaleType="centerCrop"
                android:src="@drawable/banana_protein_oat" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Banana Protein Oat"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:text="🔥 250 Calorie"
                    android:textColor="#FF5722"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:text="🍗 12g   🍞 40g   🥑 4g"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Recipe 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_box"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ayam_kukus_sambal"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1">

                <TextView
                    android:text="Ayam Kukus Sambal Matah"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:text="🔥 200 Calorie"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:text="🍗 30g   🍞 5g   🥑 8g"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Recipe 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_box"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/gado_gado_sehat"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1">

                <TextView
                    android:text="Gado-Gado Sehat (Tanpa Lontong)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:text="🔥 250 Calorie"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:text="🍗 15g   🍞 25g   🥑 10g"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Recipe 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_box"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/sup_jagung_ayam"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1">

                <TextView
                    android:text="Sup Jagung Ayam"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:text="🔥 250 Calorie"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:text="🍗 22g   🍞 30g   🥑 5g"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
