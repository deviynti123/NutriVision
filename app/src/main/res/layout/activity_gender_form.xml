<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvQuestionGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="@string/gender_title"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMale"
        android:layout_width="144dp"
        android:layout_height="89dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/gender_button_selector"
        android:text="@string/gender_type1"
        app:layout_constraintEnd_toStartOf="@+id/btnFemale"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionGender" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFemale"
        android:layout_width="134dp"
        android:layout_height="91dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/gender_button_selector"
        android:text="@string/gender_type2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btnMale"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionGender" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinueGender"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/button_color"
        android:text="@string/button"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnMale" />

</androidx.constraintlayout.widget.ConstraintLayout>
