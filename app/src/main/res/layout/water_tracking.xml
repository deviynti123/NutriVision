<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutWaterTracking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".WaterTrackingActivity">

    <!-- Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Water Tracking"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Water Progress Container -->
    <FrameLayout
        android:id="@+id/waterContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp">

        <!-- Outline box -->
        <View
            android:id="@+id/waterOutline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_water_outline" />

        <!-- Filled water level -->
        <View
            android:id="@+id/waterFill"
            android:layout_width="match_parent"
            android:layout_height="50%"  <!-- Replace dynamically in Java/Kotlin -->
        android:layout_gravity="bottom"
        android:background="#A3E4F9" />
    </FrameLayout>

    <!-- Water Label -->
    <TextView
        android:id="@+id/waterStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="700ml / 2000ml"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <!-- Glass & Bottle Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnGlass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Glass\n(+200ml)"
            android:textAlignment="center"
            android:background="@drawable/bg_button_water"
            android:textColor="#FFFFFF"
            android:padding="16dp"/>

        <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnBottle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bottle\n(+1L)"
            android:textAlignment="center"
            android:background="@drawable/bg_button_water"
            android:textColor="#FFFFFF"
            android:padding="16dp"/>
    </LinearLayout>
</LinearLayout>
