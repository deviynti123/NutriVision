<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->

    <!-- Food Name -->

    <!-- Summary Box -->

    <!-- Number of Servings -->

    <!-- Serving Input -->

    <!-- Nutrition Facts -->

    <!-- Nutrition Facts Details -->
    <TextView
        android:id="@+id/foodDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="Food Details"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Sup ayam"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <LinearLayout
        android:id="@+id/nutritionSummaryBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@drawable/nutrition_card"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foodName">

        <!-- Calories -->
        <LinearLayout
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <TextView
                android:text="Calories"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Carbs -->
        <LinearLayout
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <TextView
                android:text="Carbs"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Protein -->
        <LinearLayout
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <TextView
                android:text="Protein"
                android:textSize="12sp" />

            <TextView
                android:text="20.4g"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Fat -->
        <LinearLayout android:orientation="vertical">

            <TextView
                android:text="Fat"
                android:textSize="12sp" />

            <TextView
                android:text="15.2g"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/servingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="Number of servings"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutritionSummaryBox" />

    <LinearLayout
        android:id="@+id/servingInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/servingLabel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:padding="8dp"
            android:text="Gram" />
    </LinearLayout>

    <TextView
        android:id="@+id/nutritionFactsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:text="Nutrition facts"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/servingInputLayout" />

    <LinearLayout
        android:id="@+id/nutritionFactsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/nutritionFactsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView android:text="Calories - 10g" />
        <TextView android:text="Fat - 2g" />
        <TextView android:text="Cholesterol - 0g" />
        <TextView android:text="Protein - 3g" />
        <TextView android:text="Carbohydrates - 20g" />
        <TextView android:text="Sugar - 5g" />
        <!-- Tambahkan data lain sesuai kebutuhan -->
    </LinearLayout>

    <EditText
        android:id="@+id/servingInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_edit"
        android:hint="1"
        android:inputType="number"
        android:padding="8dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="215dp" />

    <TextView
        android:text="10.0g"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="168dp" />

    <TextView
        android:text="150"
        android:textColor="#FF7A00"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="143dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
