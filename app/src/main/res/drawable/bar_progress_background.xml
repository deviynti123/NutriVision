<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background putih -->
            <corners android:radius="8dp" /> <!-- Radius lebih besar untuk efek bulat -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#5263F8" /> <!-- Warna progress biru -->
                <corners android:radius="8dp" /> <!-- Radius lebih besar untuk efek bulat -->
            </shape>
        </clip>
    </item>
</layer-list>